@inherits LayoutComponentBase


@* Required *@
<MudThemeProvider />

<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="page">
    <main>
        <div class="top-row px-4" style="display: flex; justify-content: space-between; align-items: center;">
            <div style="display: flex; align-items: center;">
                <img src="images/logoOutsourcing.jpg" alt="Logo" style="height: 20px; margin-right: 15px;"@onclick="ToHome">
            </div>
            <div style="margin-left: auto;">
                <button class="btn btn-outline-dark login-btn" @onclick="NavigateToLogin">Log in</button>
                <button class="btn btn-success signup-btn" @onclick="NavigateToSignup">Sign up</button>
            </div>
        </div>
    </main>
</div>
<article class="content px-4">
    @Body
</article>
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/Login");
    }

    private void ToHome()
    {
        NavigationManager.NavigateTo("/");
    }
    private void NavigateToSignup()
    {
        NavigationManager.NavigateTo("/choose-role");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; }
}

